  <script>
    // Filtros das fotos
    document.querySelectorAll('.categoria-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelectorAll('.categoria-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        let categoria = this.getAttribute('data-categoria');
        if (categoria === 'todas') {
          document.querySelectorAll('.foto-card').forEach(card => card.classList.add('show'));
          document.getElementById('mensagem-selecao').style.display = 'none';
          document.querySelector('.voltar-btn').style.display = 'inline-block';
        } else {
          document.querySelectorAll('.foto-card').forEach(card => {
            if (card.classList.contains('categoria-' + categoria)) {
              card.classList.add('show');
            } else {
              card.classList.remove('show');
            }
          });
          document.getElementById('mensagem-selecao').style.display = 'none';
          document.querySelector('.voltar-btn').style.display = 'inline-block';
        }
      });
    });
    // Botão voltar
    document.querySelector('.voltar-btn').addEventListener('click', function() {
      document.querySelectorAll('.foto-card').forEach(card => card.classList.remove('show'));
      document.getElementById('mensagem-selecao').style.display = 'block';
      document.querySelectorAll('.categoria-btn').forEach(btn => btn.classList.remove('active'));
      this.style.display = 'none';
    });
    // Inicialização
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.foto-card').forEach(card => card.classList.remove('show'));
      document.getElementById('mensagem-selecao').style.display = 'block';
      document.querySelector('.voltar-btn').style.display = 'none';
    });
    // Lightbox fotos
    function openLightbox(imgSrc, title, description) {
      document.getElementById('lightbox-image').src = imgSrc;
      document.getElementById('lightbox-title').textContent = title;
      document.getElementById('lightbox-description').textContent = description;
      document.getElementById('foto-lightbox').style.display = 'block';
      document.body.style.overflow = 'hidden';
    }
    function closeLightbox() {
      document.getElementById('foto-lightbox').style.display = 'none';
      document.body.style.overflow = 'auto';
    }
    window.addEventListener('click', function(event) {
      const lightbox = document.getElementById('foto-lightbox');
      if (event.target === lightbox) {
        closeLightbox();
      }
    });
    // --- Vídeos: Pausa automática ---
    // Carrega a API do YouTube
    var tag = document.createElement('script');
    tag.src = "https://www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
    // Objeto para armazenar referências aos players do YouTube
    var youtubePlayers = {};
    // Chamado automaticamente quando a API do YouTube estiver pronta
    function onYouTubeIframeAPIReady() {
      var youtubeIframes = document.querySelectorAll('.youtube-player');
      youtubeIframes.forEach(function(iframe) {
        var playerId = iframe.id;
        if (playerId) {
          youtubePlayers[playerId] = new YT.Player(playerId, {
            events: {
              'onStateChange': onPlayerStateChange
            }
          });
        }
      });
    }
    // Quando um player do YouTube muda de estado
    function onPlayerStateChange(event) {
      if (event.data == YT.PlayerState.PLAYING) {
        var currentPlayer = event.target;
        for (var id in youtubePlayers) {
          var player = youtubePlayers[id];
          if (player && player !== currentPlayer && player.pauseVideo && typeof player.pauseVideo === 'function') {
            player.pauseVideo();
          }
        }
        pauseAllHTMLVideos();
      }
    }
    // Função para pausar todos os vídeos HTML5
    function pauseAllHTMLVideos() {
      var htmlVideos = document.querySelectorAll('video.video-player');
      htmlVideos.forEach(function(video) {
        video.pause();
      });
    }
    // Script para os vídeos HTML5
    document.addEventListener('DOMContentLoaded', function() {
      const htmlVideos = document.querySelectorAll('video.video-player');
      htmlVideos.forEach(video => {
        video.addEventListener('play', function() {
          htmlVideos.forEach(otherVideo => {
            if (otherVideo !== video) {
              otherVideo.pause();
            }
          });
          for (var id in youtubePlayers) {
            var player = youtubePlayers[id];
            if (player && player.pauseVideo && typeof player.pauseVideo === 'function') {
              player.pauseVideo();
            }
          }
        });
      });
    });
  </script>
</body>
</html>
